<section class="cart-show">

  <header class="page-header">
    <h1>My Cart</h1>
  </header>

  <% if !enhanced_cart.empty? %>
    <%= render 'cart' %>
  <% else %>
    <div class="alert alert-danger" role="alert">
      Your cart is empty. Go ahead, treat yourself and <a href="/" class="alert-link">continue shopping</a>. 
    </div>
  <% end %>
</section>
